"""
def nCr(n, r):
    if int(n) == int(r) or int(r) == 0:
        return 1
    elif int(n) > int(r):
        diff = int(n) - int(r)
        fuchka = n
        numerator = n
        denomenator = r
        while fuchka > diff:
            numerator = numerator * (fuchka - 1)
            fuchka -= 1
        fuchka = r
        while fuchka > 1:
            denomenator = denomenator * (fuchka -1)
            fuchka -= 1
        denomenator = denomenator * diff
        return (int(numerator/denomenator))

    else:
        return 'Wrong Input! N should be always greater than R.'

print(nCr(8,2))
